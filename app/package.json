{
  "name": "twitch-lurker",
  "description": "Always support your favorite streamer by automatically pulling up their stream when they go live.",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "lint": "npx eslint .",
    "test": "npm run lint && vitest run",
    "test:watch": "vitest",
    "build": "vite build",
    "build:firefox": "cross-env TARGET=FIREFOX vite build",
    "bf": "npm run build:firefox",
    "package:firefox": "web-ext build --source-dir build/firefox --artifacts-dir build --filename firefox-build.zip --overwrite-dest",
    "pf": "npm run package:firefox",
    "build:chrome": "cross-env TARGET=CHROME vite build",
    "bc": "npm run build:chrome",
    "watch": "nodemon",
    "watch:firefox": "cross-env TARGET=FIREFOX nodemon",
    "wf": "npm run watch:firefox",
    "watch:chrome": "cross-env TARGET=CHROME nodemon",
    "wc": "npm run watch:chrome"
  },
  "dependencies": {
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.5",
    "@mui/icons-material": "^5.15.18",
    "@mui/material": "^5.15.18",
    "arrive": "^2.4.1",
    "color": "^3.1.3",
    "copy-to-clipboard": "^3.3.3",
    "jotai": "^2.8.0",
    "jwt-decode": "^3.1.2",
    "lodash.chunk": "^4.2.0",
    "lodash.debounce": "^4.0.8",
    "lodash.get": "^4.4.2",
    "lodash.merge": "^4.6.2",
    "lodash.uniq": "^4.5.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "react-sortable-hoc": "^2.0.0",
    "react-virtualized-auto-sizer": "^1.0.24",
    "react-window": "^1.8.9",
    "webextension-polyfill": "^0.12.0",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "2.0.0-beta.23",
    "@types/arrive": "^2.4.0",
    "@types/chrome": "0.0.126",
    "@types/color": "^3.0.1",
    "@types/lodash.chunk": "^4.2.6",
    "@types/lodash.debounce": "^4.0.6",
    "@types/lodash.get": "^4.4.7",
    "@types/lodash.merge": "^4.6.7",
    "@types/lodash.uniq": "^4.5.7",
    "@types/node": "^18.0.0",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.2",
    "@types/react-router-dom": "^5.1.6",
    "@types/react-window": "^1.8.5",
    "@types/webextension-polyfill": "^0.10.7",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "@vitejs/plugin-react": "^4.2.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.28.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.18.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "nodemon": "^3.1.0",
    "typescript": "^5.8.3",
    "vite": "^5.2.11",
    "vitest": "^1.6.0"
  }
}
