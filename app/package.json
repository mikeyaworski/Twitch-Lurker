{
  "name": "twitch-lurk-pro",
  "description": "Always support your favorite streamer by automatically pulling up their stream when they go live.",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "lint": "npx eslint .",
    "test": "npm run lint && jest",
    "build:prod": "env-path -p .env.production react-app-rewired build && rollup -c && rm -r build/background-scripts build/content-scripts",
    "build:scripts": "rollup -c && cp public/manifest.json build",
    "s": "npm run build:scripts",
    "build:popup": "env-path -p .env.development react-app-rewired build",
    "p": "npm run build:popup",
    "build:all": "npm run build:popup && npm run build:scripts",
    "watch:popup": "cra-build-watch --disable-chunks",
    "watch:scripts": "rollup -c -w"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@material-ui/core": "^4.11.4",
    "@material-ui/icons": "^4.11.2",
    "@material-ui/lab": "^4.0.0-alpha.58",
    "arrive": "^2.4.1",
    "clsx": "^1.1.1",
    "color": "^3.1.3",
    "dnd-core": "^14.0.0",
    "lodash.chunk": "^4.2.0",
    "lodash.debounce": "^4.0.8",
    "react": "^17.0.2",
    "react-beautiful-dnd": "^13.1.0",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "webextension-polyfill-ts": "^0.25.0"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^3.0.1",
    "@rollup/plugin-commonjs": "^13.0.0",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "@rollup/plugin-typescript": "^6.1.0",
    "@types/arrive": "^2.4.0",
    "@types/chrome": "0.0.126",
    "@types/color": "^3.0.1",
    "@types/jest": "^26.0.19",
    "@types/lodash.chunk": "^4.2.6",
    "@types/lodash.debounce": "^4.0.6",
    "@types/node": "^14.14.7",
    "@types/react": "^16.9.56",
    "@types/react-beautiful-dnd": "^13.1.1",
    "@types/react-dom": "^16.9.9",
    "@types/react-router-dom": "^5.1.6",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "browserify": "^17.0.0",
    "cra-build-watch": "^3.4.0",
    "env-path": "^1.0.7",
    "eslint": "^7.28.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.18.0",
    "eslint-plugin-react-hooks": "^1.7.0",
    "jest": "^26.6.0",
    "react-app-rewired": "^2.1.8",
    "react-scripts": "^4.0.3",
    "rollup": "^2.52.0",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^26.4.4",
    "ts-node": "^10.0.0",
    "tslib": "^2.0.3",
    "typescript": "^4.3.2"
  }
}
